{
  "trailingComma": "es5",
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "quoteProps": "as-needed",
  "singleQuote": true,
  "bracketSpacing": true,
  "endOfLine": "auto",
  "arrowParens": "avoid",

  "overrides": [
    {
      "files": "*.md",
      "options": { "parser": "mdx" }
    },
    {
      "files": "*.json",
      "options": { "parser": "json" }
    },
    {
      "files": "*.css",
      "options": { "parser": "css" }
    }
  ]
}
